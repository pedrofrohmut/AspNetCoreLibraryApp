# To learn more about .editorconfig see https://aka.ms/editorconfigdocs
root = true

# All files
[*]
indent_style = space

# Xml files
[*.xml]
indent_size = 2

# All files
[*]
guidelines = 80, 120

# C# or VB files
[*.{cs,vb}]
guidelines = 80, 120

[*]
# Named color format
guidelines_style = 2.5px solid 55333333

[*.{cs,vb}]
# ARGB color format (red with 25% opacity)
guidelines_style = 2.5px solid 55333333
